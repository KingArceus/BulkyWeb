@model List<Product>
@{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2>Product List</h2>
            </div>
            <div class="col-6 text-end align-bottom">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary btn-light">
                    Create New Product <i class="bi bi-plus-circle"></i>
                </a>
            </div>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Price
                </th>
                <th>
                    Author
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
}

@section Scripts{
    <script src="~/js/product.js"></script>
}