@{
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2>Company List</h2>
            </div>
            <div class="col-6 text-end align-bottom">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary btn-light">
                    Create New Company <i class="bi bi-plus-circle"></i>
                </a>
            </div>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    StreetAddress
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    PostalCode
                </th>
                <th>
                    PhoneNumber
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
}

@section Scripts{
    <script src="~/js/company.js"></script>
}